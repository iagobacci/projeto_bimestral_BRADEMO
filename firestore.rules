rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para usuários autenticados
    match /users/{userId} {
      // Usuários podem ler e escrever apenas seus próprios dados
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para alunos - usuários autenticados podem criar, ler, atualizar e deletar
    match /alunos/{alunoId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para atividades - usuários autenticados podem criar, ler, atualizar e deletar
    match /atividades/{atividadeId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para medições - usuários autenticados podem criar, ler, atualizar e deletar
    match /medicoes/{medicaoId} {
      allow read, write: if request.auth != null;
    }
  }
}






